{
  "name": "a0-launcher",
  "version": "1.0.0",
  "description": "Agent Zero Launcher - Desktop application shell",
  "main": "shell/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
